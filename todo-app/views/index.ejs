<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="./css/styles.css">
    
    <title>Document</title>
</head>
<body>
    <div class = "grid grid-cols-6">
        <div class = "col-start-3 col-span-2">
            <%- include('header.ejs') %>
            <form action="/todos" method="post">
                <div class = "flex gap-2 py-4">
                    <div class = "felx-auto">
                            <input type="text" name="title" placeholder="Enter your todo here" class = "border border-grey-300 rounded text-grey-900 w-full p-2 text-sm leading-5" required/>
                        </div>
                    <div class = "felx-auto">
                        <input type="date" name = "dueDate" class="border border-grey-300 rounded text-grey-900 w-full p-2 text-sm leading-5">
                    </div>
                    <div class = "felx-none">
                        <button type="submit" class="bg-green-600 text-white py-2 px-5 rounded font-medium leading-5 mr-2 mb-2">Add</button>
                    </div>
                </div>
                <div>
                    
                </div>
            </form>
            <%- include('todos.ejs', {overdues, duesToday, duesLater}) %>
        </div>
    </div>
    <%- include('footer.ejs') %>
</body>
</html>